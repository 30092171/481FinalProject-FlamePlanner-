<Window x:Class="FlamePlanner.MapEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlamePlanner"
        mc:Ignorable="d"
        Title="Event" Height="350" Width="845">
    <Grid>


        <Label x:Name="label" Content="Event: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="event_label" Content="&lt;event here&gt;" HorizontalAlignment="Left" Margin="95,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="label_Copy" Content="Date:" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" FontSize="24"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="80,57,0,0" VerticalAlignment="Top" Height="42" FontSize="24"/>

        <Button x:Name="button" Content="✓" HorizontalAlignment="Left" Margin="306,211,0,0" VerticalAlignment="Top" FontSize="36" Width="120" Click="button_Click"/>

        <Label x:Name="startTime" Content="Time:" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox x:Name="hour1" HorizontalAlignment="Left" Margin="82,109,0,0" VerticalAlignment="Top" Width="56" FontSize="24" SelectedIndex="11">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
        </ComboBox>
        <Label x:Name="divider1" Content=":" HorizontalAlignment="Left" Margin="138,109,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox x:Name="minute1" HorizontalAlignment="Left" Margin="153,109,0,0" VerticalAlignment="Top" Width="56" FontSize="24" SelectedIndex="11">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
        </ComboBox>
        <ComboBox x:Name="amPm1" HorizontalAlignment="Left" Margin="214,109,0,0" VerticalAlignment="Top" Width="64" FontSize="24" SelectedIndex="1">
            <ComboBoxItem Content="AM"/>
            <ComboBoxItem Content="PM"/>
        </ComboBox>


        <Label x:Name="endTime" Content="Until:" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top" FontSize="24"/>


        <ComboBox x:Name="hour2" HorizontalAlignment="Left" Margin="82,158,0,0" VerticalAlignment="Top" Width="56" FontSize="24" SelectedIndex="11">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
        </ComboBox>
        <Label x:Name="divider2" Content=":" HorizontalAlignment="Left" Margin="138,158,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox x:Name="minute2" HorizontalAlignment="Left" Margin="153,158,0,0" VerticalAlignment="Top" Width="56" FontSize="24" SelectedIndex="11">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <ComboBoxItem Content="9"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
        </ComboBox>
        <ComboBox x:Name="amPm2" HorizontalAlignment="Left" Margin="214,158,0,0" VerticalAlignment="Top" Width="64" FontSize="24" SelectedIndex="1">
            <ComboBoxItem Content="AM"/>
            <ComboBoxItem Content="PM"/>
        </ComboBox>


        <StackPanel Orientation="Vertical" Margin="0,0,0,0" HorizontalAlignment="Right" Background="AliceBlue" Width="400"> <!--Can be collapsed to hide restrictions-->
            <Label Content="Restrictions: " HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="24"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,20,0,0">
            The Item you have selected has restrictions around its Time or Dates
            </TextBlock>

            <StackPanel Orientation="Horizontal">
                <Label Content="Time Restrictions: " HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="20"/>
                <TextBlock x:Name="timeRestrictBlock"  Margin="0,25,0,0" FontSize="20" Foreground="DarkRed">10:00am to 4:00pm</TextBlock>
            </StackPanel>


            <Label Content="Date Restrictions: " HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="20"/>
            <TextBlock x:Name="dateRestrictBlock"  Margin="25,0,0,0" FontSize="20" Foreground="DarkRed">Mondays, Wednesdays, Fridays</TextBlock>



        </StackPanel>
    </Grid>
</Window>
