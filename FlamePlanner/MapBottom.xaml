<UserControl x:Class="FlamePlanner.MapBottom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlamePlanner"
             mc:Ignorable="d" d:DesignWidth="800" Height="164">
    <Grid Background="#FFE4E0E0">
        <Label x:Name="label" Content="Filter:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="77,10,0,0" VerticalAlignment="Top" Width="318" Height="42" SelectedIndex="0" VerticalContentAlignment="Center" SelectionChanged="comboBox_SelectionChanged">
            <TextBlock Text="NONE" TextWrapping="Wrap"/>
            <TextBlock Text="Family" TextWrapping="Wrap"/>
            <TextBlock Text="Concert" TextWrapping="Wrap"/>
            <TextBlock Text="Food and Drink" TextWrapping="Wrap"/>
            <TextBlock Text="Festivals and Special Events" TextWrapping="Wrap"/>
            <TextBlock Text="Film and Video" TextWrapping="Wrap"/>
            <TextBlock Text="Museums, Galleries and Exhibitions" TextWrapping="Wrap"/>
            <TextBlock Text="Shopping and Markets" TextWrapping="Wrap"/>
            <TextBlock Text="Sports and Recreation" TextWrapping="Wrap"/>
            <TextBlock Text="Theatre, Comedy and Performing Arts" TextWrapping="Wrap"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" Margin="10,57,0,0">
            <Label x:Name="label_Copy" Content="Address: " HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="24"/>
            <TextBox x:Name="addressSearchbox" VerticalAlignment="Top" Width="225" Height="30" Margin="0,8,0,0" VerticalContentAlignment="Center"></TextBox>
            <Button x:Name="addressSearchGoButton" Width="50" Height="30" VerticalAlignment="Top" Margin="5,8,0,0" Content="Go" Click="addressSearchGoButton_Click"/>
        </StackPanel>
        <GroupBox x:Name="groupBox" Header="Key" Margin="400,0,10,10" FontSize="18">
            <Grid>
                <Image x:Name="image" HorizontalAlignment="Left" Height="40" Margin="5,0,0,0" VerticalAlignment="Top" Width="40" Source="Resources/blue.png"/>
                <Label x:Name="label1" Content="Selected Address" HorizontalAlignment="Left" Margin="50,6,0,0" VerticalAlignment="Top"/>
                <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="40" Margin="5,45,0,0" VerticalAlignment="Top" Width="40" Source="Resources/blueMarker.png"/>
                <Label x:Name="label1_Copy" Content="Event" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center"/>
                <Image x:Name="image_Copy1" HorizontalAlignment="Left" Height="40" Margin="197,6,0,0" VerticalAlignment="Top" Width="40" Source="/Resources/redMarker.png"/>
                <Label x:Name="label1_Copy1" Content="Point of Interest" HorizontalAlignment="Left" Margin="240,6,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Width="400" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,25">
            <Label FontSize="24">Event Search: </Label>
            <TextBox x:Name="eventSearchbox" TextWrapping="Wrap" Height="30" Width="177" Margin="5,0,5,0" VerticalContentAlignment="Center"/>
            <Button x:Name="eventSearchGoButton" Width="50" Height="30" VerticalAlignment="Top" Margin="0,6,0,0" Content="Go" Click="eventSearchGoButton_Click"/>
        </StackPanel>
            

    </Grid>
</UserControl>
