<Page x:Class="FlamePlanner.Map"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlamePlanner"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="700"
      Title="Map"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">

    <Grid Background="#FF2D2D30">
        <Canvas x:Name="canvas">
            <ScrollViewer Width="{Binding ActualWidth, ElementName=canvas, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=canvas, Mode=OneWay}" HorizontalScrollBarVisibility="Visible">
                <Grid>
                    <Image Source="Resources/calgary.png"/>
                    <Image Source="Resources/blue.png"  Width="40" Height="40" Margin="691,407,545,485"/>
                    <Button x:Name="poi1" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Margin="516,505,700,367" Click="poi1_Click">
                        <Image Source="Resources/redMarker.png"  Width="50" Height="50"/>
                    </Button>
                    <Button x:Name="poi2" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Margin="893,546,323,326" Click="poi2_Click">
                        <Image Source="Resources/blueMarker.png"  Width="50" Height="50"/>
                    </Button>
                    <Button x:Name="poi3" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Margin="595,79,621,793" Click="poi3_Click">
                        <Image Source="Resources/redMarker.png"  Width="50" Height="50"/>
                    </Button>
                    <Label x:Name="label" Content="6 Street SW" HorizontalAlignment="Left" Margin="510,474,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                    <Label x:Name="label_Copy" Content="Prince Island Park" HorizontalAlignment="Left" Margin="574,48,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                    <Label x:Name="label_Copy1" Content="Stampede" HorizontalAlignment="Left" Margin="891,522,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                </Grid>
            </ScrollViewer>
        </Canvas>
        <Button x:Name="minusButton" Width="60" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,25,25">
            <Image Source="Resources/negativeIcon.png"  Width="50" Height="50"/>
        </Button>
        <Button x:Name="plusButton" Width="60" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,25,85">
            <Image Source="Resources/plusIcon.png"  Width="50" Height="50"/>
        </Button>
    </Grid>
</Page>
