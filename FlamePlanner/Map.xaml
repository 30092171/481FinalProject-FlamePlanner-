<Page x:Class="FlamePlanner.Map"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlamePlanner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Map"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">

    <Grid Background="#FF2D2D30">
        <Canvas x:Name="canvas">
            <ScrollViewer Width="{Binding ActualWidth, ElementName=canvas, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=canvas, Mode=OneWay}" HorizontalScrollBarVisibility="Visible">
                <Grid>
                    <Image Source="Resources/calgary.png"/>
                    <Button x:Name="poi1" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Margin="423,320,793,552">
                        <Image Source="Resources/mapMarker.ico"  Width="50" Height="50"/>
                    </Button>
                    <Button x:Name="poi2" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Margin="900,344,316,528">
                        <Image Source="Resources/mapMarker.ico"  Width="50" Height="50"/>
                    </Button>
                    <Button x:Name="poi3" Width="60" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Margin="622,157,594,715">
                        <Image Source="Resources/mapMarker.ico"  Width="50" Height="50"/>
                    </Button>
                </Grid>
            </ScrollViewer>
        </Canvas>
        <Button x:Name="minusButton" Width="60" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,25,25">
            <Image Source="Resources/negativeIcon.png"  Width="50" Height="50"/>
        </Button>
        <Button x:Name="plusButton" Width="60" Height="60" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,25,85">
            <Image Source="Resources/plusIcon.png"  Width="50" Height="50"/>
        </Button>
    </Grid>
</Page>
